<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90EE90"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/wizytaUWeterynarzaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E8B57"
        android:padding="10dp"
        android:text="Wizyta u weterynarza"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/imieNazwisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Imię i nazwisko właściciela..." />

    <TextView
        android:id="@+id/GatunekTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gatunek"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IleMaLatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Ile ma lat?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ileMaLatProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0" />

        <SeekBar
            android:id="@+id/mySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="0" />

    </LinearLayout>

    <EditText
        android:id="@+id/celWizyty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cel wizyty" />


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />


</LinearLayout>